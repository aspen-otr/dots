(deflisten CURRENT-WINDOW-TITLE "ristate -w")
(defpoll USER :interval "30m" "scripts/user-full-name")

(defwidget current-window []
  (box :class "current-window pad-sides" :orientation "h" :halign "center"
    (label :text {CURRENT-WINDOW-TITLE["title"] ?: USER}
           :limit-width 80
           :unindent true
           :lines 1)))

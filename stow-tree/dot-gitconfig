[alias]
	s = status --short --branch
	l = log --oneline
	p = push
	f = fetch
	a = add
	au = add -u
	d = diff
	dc = diff --cached
	rs = restore
	rsc = restore --cached
	sbui = submodule update --init --recursive
	sbp = submodule update --remote --recursive
	c = commit
	cm = c -m
	cs = c -S
	commit-count = "!git log --oneline | wc -l"
	last = log -1 HEAD
	re = remote
